{
  "name": "video-chat",
  "version": "0.0.1",
  "description": "Make decisions with friends via ranked voting!",
  "main": "index.js",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "docker:compose": "docker-compose up -d",
    "client:dev": "npm run dev --workspace=client",
    "client:build": "npm run build --workspace=client",
    "client:serve": "npm run serve --workspace=client",
    "server:dev": "npm run dev --workspace=server",
    "server:prod": "npm run serve --workspace=server",
    "server:start": "npm run start --workspace=server",
    "start:dev": "concurrently 'npm:server:dev' 'npm:client:dev'",
    "start:prod": "npm run client:build && npm run server:prod",
    "start": "npm run client:build && npm run server:start",
    "stop": "docker-compose down",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "ts",
    "react",
    "socketjs"
  ],
  "author": "Oleg Slavashevich",
  "license": "MIT",
  "devDependencies": {
    "@types/webpack": "^5.28.0",
    "concurrently": "^7.0.0",
    "prettier": "^2.5.1",
    "wait-on": "^6.0.1"
  }
}
